*{
    margin: 0;
    background-color: var(--second-color);
    color: var(--main-color);
    font-family: 'PoliceContenu';
}

:root{
    --main-color : black;
    --second-color : white; 
    --background : #eedccf;
    --third-color : #fff7b6;
}

@font-face {
    font-family: 'PoliceTitre';
