{% extends 'base.html.twig' %}

{% block title %}News{% endblock %}

{% block body %}
    <h1>News</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ news.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ news.Nom }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ news.Prenom }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ news.Email }}</td>
            </tr>
            <tr>
                <th>Genre</th>
                <td>{{ news.Genre }}</td>
            </tr>
            <tr>
                <th>RGPD</th>
                <td>{{ news.RGPD }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_news_index') }}">Retour à la liste</a>

    <a href="{{ path('app_news_edit', {'id': news.id}) }}">Modifier</a>

    {{ include('news/_delete_form.html.twig') }}
{% endblock %}
